<p id="notice"><%= notice %></p>

<h1> Listado Playlists </h1>
<table class="table table-striped table-bordered">
	<thead class="thead-inverse">
		<tr>
			<th> Name </th>
			<th> Number of Votes </th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @playlists.each do |playlist| %>
		<tr>
			<td><%= playlist.name %></td>
			<td><%= playlist.number_of_votes %></td>
	        <td><%= link_to 'Show', playlist, class:'btn btn-success', role:'button' %></td>
	        <td><%= link_to 'Edit', edit_playlist_path(playlist), class:'btn btn-warning', role:'button' %></td>
	        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_playlist btn btn-danger', role:'button' %></td>
		</tr>

		<% end %>	
	</tbody>
</table>	


<%= link_to 'New Playlist', new_playlist_path, class:'btn btn-primary', role:'button' %>
