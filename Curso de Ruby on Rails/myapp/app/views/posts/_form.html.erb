<%= form_for (@post) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :article %><br>
    <%= f.text_area :article %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Show', @post, :class => "btn btn-primary btn-lg active l" %> |
<%= link_to 'Back', posts_path %>
