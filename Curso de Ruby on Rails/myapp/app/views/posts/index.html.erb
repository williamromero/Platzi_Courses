<% provide(:title, 'Post Displayer') %>
<h1> Tabla de Prueba </h1>
<table class="table table-bordered table-hover">
      <thead class="thead-inverse">
        <tr>
          <th scope="row">Title</th>
          <th scope="row">Article</th>
          <th scope="row" colspan="3">Options</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.article %></td>
            <td><%= link_to 'Show', post, :class => "btn btn-primary btn-sm active" %></td>
            <td><%= link_to 'Edit', edit_post_path(post), :class => "btn btn-warning btn-sm active" %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },  :class => "btn btn-danger btn-sm active" %></td>
          </tr>
        <% end %>
      </tbody>
</table>